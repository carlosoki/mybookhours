{% extends 'ProjectAppBundle::metronic.html.twig' %}

{% block page_title %}
    <h3 class="page-title"> Events Registration
        <small></small>
    </h3>
{% endblock %}

{% block page_breadcrumb %}
    <li>
        <i class="icon-home"></i>
        <a href="{{ path('app_dashboard') }}">Dashboard</a>
        <i class="fa fa-angle-right"></i>
        <a href="javascript:;">New Event</a>
        <i class="fa fa-angle-right"></i>
    </li>
{% endblock %}

{% block body -%}
    {% block content %}
        <!-- START SEARCH FORM -->
        <div class="portlet box purple">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-search"></i>Start filtering for the correct appointment </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="" class="form-horizontal">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-3">By start</label>
                            <div class="col-md-4">
                                <div class="input-group date form_datetime" data-date="{{ "now"|date("Y-m-d H:i:s") }}">
                                    <input type="text" size="16" readonly class="form-control input-circle">
                                    <span class="input-group-btn">
                                        <button class="btn default date-reset input-circle" type="button">
                                            <i class="fa fa-times"></i>
                                        </button>
                                        <button class="btn default date-set input-circle" type="button">
                                            <i class="fa fa-calendar"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">By End</label>
                            <div class="col-md-4">
                                <div class="input-group date form_datetime" data-date="{{ "now"|date("Y-m-d H:i:s") }}">
                                    <input type="text" size="16" readonly class="form-control input-circle">
                                    <span class="input-group-btn">
                                        <button class="btn default date-reset input-circle" type="button">
                                            <i class="fa fa-times"></i>
                                        </button>
                                        <button class="btn default date-set input-circle" type="button">
                                            <i class="fa fa-calendar"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">By Client:</label>
                            <div class="col-md-4">
                                <div class="input-icon">
                                    <input type="text" class="form-control input-circle" placeholder="Only one client here.">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">By Staff:</label>
                            <div class="col-md-4">
                                <div class="input-icon">
                                    <input type="text" class="form-control input-circle" placeholder="Only on staff here.">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-circle purple"><i class="icon-magnifier"></i> Search</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END SEARCH FORM -->

        <!-- START TABLE RESULT -->
        <div class="portlet box purple">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-calendar"></i>Select the correct appointment </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                        {#{% for appointment in appointments %}#}
                        <tr>
                            <td>
                                <input type="radio" name="optionsRadios" id="optionsRadios">
                            </td>
                            <td> appmt0000123 </td>
                            <td> 06 April 2016 - 09:00am </td>
                            <td> 06 April 2016 - 10:00am </td>
                            <td> Rose </td>
                            <td> Gafney </td>
                        </tr>
                        {#{% endfor %}#}
                        </tbody>
                        <thead>
                        <tr>
                            <th> Select </th>
                            <th> Appointment ID </th>
                            <th> Start </th>
                            <th> End </th>
                            <th> Client </th>
                            <th> Staff </th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <!-- END TABLE RESULT -->

        <!-- START EVENT FORM -->
        <div class="portlet box purple">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-refresh"></i>Registry events w/ client </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="reload"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="#" class="form-horizontal">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Appointment ID</label>
                            <div class="col-md-4">
                                <div class="input-icon">
                                    <i class="fa fa-ban"></i>
                                    <input type="password" class="form-control input-circle" placeholder="appmt0000123" disabled="">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Client</label>
                            <div class="col-md-4">
                                <div class="input-icon">
                                    <i class="fa fa-map-o"></i>
                                    <input type="password" class="form-control input-circle" placeholder="Rose, @ 1/20 Stuart st, Prahan" disabled="">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Start</label>
                            <div class="col-md-4">
                                <div class="input-group date form_datetime" data-date="{{ "now"|date("Y-m-d H:i:s") }}">
                                    <input type="text" size="16" readonly class="form-control input-circle" value="06 April 2016 - 09:00am">
                                    <span class="input-group-btn">
                                        <button class="btn default date-reset input-circle" type="button">
                                            <i class="fa fa-times"></i>
                                        </button>
                                        <button class="btn default date-set input-circle" type="button">
                                            <i class="fa fa-calendar"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">End</label>
                            <div class="col-md-4">
                                <div class="input-group date form_datetime" data-date="{{ "now"|date("Y-m-d H:i:s") }}">
                                    <input type="text" size="16" readonly class="form-control input-circle" value="06 April 2016 - 10:00am">
                                    <span class="input-group-btn">
                                        <button class="btn default date-reset input-circle" type="button">
                                            <i class="fa fa-times"></i>
                                        </button>
                                        <button class="btn default date-set input-circle" type="button">
                                            <i class="fa fa-calendar"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Event tasks</label>
                            <div class="col-md-4">
                                <textarea class="form-control input-circle" rows="3" disabled="">
                                Info about the client:
                                ...
                                ----------------------
                                Home care tasks:
                                ...
                                ----------------------
                                Personal care tasks:
                                ...
                                ----------------------
                                Respite
                                ...
                                ----------------------
                                </textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Notes / Report</label>
                            <div class="col-md-4">
                                <textarea class="form-control input-circle" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Client's signiture</label>
                            <div class="col-md-4">
                                <div class="input-icon">
                                    <i class="fa fa-pencil-square-o"></i>
                                    <input type="text" class="form-control input-circle">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Travel info</label>
                            <div class="col-md-4">
                                <button type="button" class="btn btn-circle purple">Add/View</button>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-circle purple">Save</button>
                                <a href="{{ path('app_appointment_list') }}" class="btn btn-circle purple"> List of events </a>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END EVENT FORM -->


    {% endblock %}
{% endblock %}