{% extends 'ProjectAppBundle::metronic.html.twig' %}

{% block page_title %}
    <h3 class="page-title"> List of appointments
        <small></small>
    </h3>
{% endblock %}

{% block page_breadcrumb %}
    <li>
        <i class="icon-home"></i>
        <a href="{{ path('app_dashboard') }}">Dashboard</a>
        <i class="fa fa-angle-right"></i>
        <a href="javascript:;">List of appointments</a>
        <i class="fa fa-angle-right"></i>
    </li>
{% endblock %}

{% block body %}
    {% block content %}
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-search"></i>Search/Filter appointments </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="" class="form-horizontal">
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-3">By start</label>
                            <div class="col-md-4">
                                <div class="input-group date form_datetime" data-date="{{ "now"|date("Y-m-d H:i:s") }}">
                                    <input type="text" size="16" readonly class="form-control input-circle">
                                    <span class="input-group-btn">
                                        <button class="btn default date-reset input-circle" type="button">
                                            <i class="fa fa-times"></i>
                                        </button>
                                        <button class="btn default date-set input-circle" type="button">
                                            <i class="fa fa-calendar"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">By End</label>
                            <div class="col-md-4">
                                <div class="input-group date form_datetime" data-date="{{ "now"|date("Y-m-d H:i:s") }}">
                                    <input type="text" size="16" readonly class="form-control input-circle">
                                    <span class="input-group-btn">
                                        <button class="btn default date-reset input-circle" type="button">
                                            <i class="fa fa-times"></i>
                                        </button>
                                        <button class="btn default date-set input-circle" type="button">
                                            <i class="fa fa-calendar"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">By Client:</label>
                            <div class="col-md-4">
                                <div class="input-icon">
                                    <input type="text" class="form-control" value="Client 1, Client 2, Client 3" data-role="tagsinput">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">By Staff:</label>
                            <div class="col-md-4">
                                <div class="input-icon">
                                    <input type="text" class="form-control" value="Staff 1, Staff 2" data-role="tagsinput">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-circle red"><i class="icon-magnifier"></i> Search</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>List of appointments </div>
                <div class="tools">
                    <a href="{{ path('app_appointment_new') }}" class="fa fa-calendar-plus-o"></a>
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="{{ path('app_appointment_list') }}" class="reload"></a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                        {#{% for appointment in appointments %}#}
                            <tr>
                                <td> - </td>
                                <td> - </td>
                                <td> - </td>
                                <td> - </td>
                                <td>
                                    <form name="client_type" method="put" action="">
                                        <button type="submit" class="btn yellow">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <form name="client_type" method="DELETE" action="">
                                        <button type="submit" class="btn red">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {#{% endfor %}#}
                        </tbody>
                        <thead>
                        <tr>
                            <th> Start </th>
                            <th> End </th>
                            <th> Client </th>
                            <th> Staff </th>
                            <th> Edit </th>
                            <th> Delete </th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    {% endblock %}

{% endblock %}