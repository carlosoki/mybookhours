{% extends 'ProjectAppBundle::metronic.html.twig' %}

{% block page_title %}
    <h3 class="page-title"> Client Registration
        <small></small>
    </h3>
{% endblock %}

{% block page_breadcrumb %}
    <li>
        <i class="icon-home"></i>
        <a href="{{ path('app_dashboard') }}">Dashboard</a>
        <i class="fa fa-angle-right"></i>
        <a href="javascript:;">Client</a>
        <i class="fa fa-angle-right"></i>
    </li>
{% endblock %}

{% block body -%}
    {% block content %}
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>New client </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="{{ path('app_client_new') }}" id="client_type" class="ajaxForm form-horizontal" method="post" novalidate>
                    <div class="form-body">
                        <div id="alert" class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button> Your form was saved successful!
                        </div>
                        <div id="error" class="form_error display-hide">
                            <button class="close" data-close="alert"></button>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Name<span style="color:red"> * </span></label>
                            <div class="col-md-4">
                                <input type="text" id="name" name="name" class="form-control input-circle" placeholder="Enter client name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Address <span style="color:red"> * </span></label>
                            <div class="col-md-4">
                                <div class="input-icon">
                                    <i class="fa fa-map-o"></i>
                                    <input type="text" id="address" name="address" class="form-control input-circle" placeholder="Client full address">
                                    <span class="help-block"> Enter the client's full addres. </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Active</label>
                            <div class="col-md-4">
                                <input type="checkbox" class="make-switch" id="isInactive" name="isInactive" data-off-color="default"
                                       data-on-color="danger" data-size="small" data-on-text="No" data-off-text="Yes">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Info about client</label>
                            <div class="col-md-4">
                                <textarea class="form-control input-circle" name="aboutClient" id="aboutClient" rows="3"></textarea>
                                <span class="help-block"> Short description about the client. </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-circle blue">Save</button>
                                <a href="{{ path('app_client_list') }}" class="btn btn-circle blue"> List of clients </a>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>

    {% endblock %}
{% endblock %}

{% block extrascripts %}
    <script src="{{ asset('scripts/controller/client/Client.js') }}"></script>
{% endblock extrascripts %}