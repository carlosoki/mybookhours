{% extends 'ProjectAppBundle::metronic.html.twig' %}

{% block page_title %}
    <h3 class="page-title"> Client Registration
        <small></small>
    </h3>
{% endblock %}

{% block page_breadcrumb %}
    <li>
        <i class="icon-home"></i>
        <a href="{{ path('app_dashboard') }}">Dashboard</a>
        <i class="fa fa-angle-right"></i>
        <a href="javascript:;">Client</a>
        <i class="fa fa-angle-right"></i>
    </li>
{% endblock %}

{% block body -%}
    {% block content %}
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>New client </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="{{ path('app_client_new') }}" id="{{ form.vars.id }}" class="ajaxForm form-horizontal" method="post" novalidate>
                    <div class="form-body">
                        <div id="alert" class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button> Your form was saved successful!
                        </div>
                        <div id="error" class="form_error display-hide">
                            <button class="close" data-close="alert"></button>
                        </div>
                        <div class="form-group">
                            {{
                                form_label(form.name, 'Name', {
                                    'label_attr': {'class': 'col-md-3 control-label'}
                                })
                            }}
                            <div class="col-md-4">
                                {{
                                    form_widget(form.name, {
                                        'attr': {
                                            'class': 'form-control input-circle',
                                            'placeholder': 'Enter client name'
                                        }
                                    })
                                }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{
                                form_label(form.address, 'Address', {
                                    'label_attr': {'class': 'col-md-3 control-label'}
                                })
                            }}
                            <div class="col-md-4">
                                <div class="input-icon">
                                    <i class="fa fa-map-o"></i>
                                    {{
                                    form_widget(form.address, {
                                        'attr': {
                                            'class': 'form-control input-circle',
                                            'placeholder': 'Client full address'
                                        }
                                    })
                                    }}
                                    <span class="help-block"> Enter the client's full addres. </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {{
                            form_label(form.isInactive, 'Active', {
                                'label_attr': {'class': 'col-md-3 control-label'}
                            })
                            }}
                            <div class="col-md-4">
                                {{
                                    form_widget(form.isInactive, {
                                        'attr': {
                                            'class': 'make-switch',
                                            'data-off-color' : 'default',
                                            'data-on-color' : 'danger',
                                            'data-size': 'small',
                                            'data-on-text': 'No',
                                            'data-off-text': 'Yes'
                                        }
                                    })
                                }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{
                            form_label(form.aboutClient, 'Name', {
                                'label_attr': {'class': 'col-md-3 control-label'}
                            })
                            }}
                            <div class="col-md-4">
                                {{
                                form_widget(form.aboutClient, {
                                    'attr': {
                                        'class': 'form-control input-circle',
                                        'rows': '3'
                                    }
                                })
                                }}
                                <span class="help-block"> Short description about the client. </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-circle blue">Save</button>
                                <a href="{{ path('app_client_list') }}" class="btn btn-circle blue"> List of clients </a>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>

    {% endblock %}
{% endblock %}

{% block extrascripts %}
    <script src="{{ asset('scripts/controller/client/Client.js') }}"></script>
{% endblock extrascripts %}