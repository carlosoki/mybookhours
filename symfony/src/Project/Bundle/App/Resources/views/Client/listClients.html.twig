{% extends 'ProjectAppBundle::metronic.html.twig' %}

{% block page_title %}
    <h3 class="page-title"> Client Registration
        <small></small>
    </h3>
{% endblock %}

{% block page_breadcrumb %}
    <li>
        <i class="icon-home"></i>
        <a href="{{ path('app_dashboard') }}">Dashboard</a>
        <i class="fa fa-angle-right"></i>
        <a href="javascript:;">List of clients</a>
        <i class="fa fa-angle-right"></i>
    </li>
{% endblock %}

{% block body %}
    {% block content %}
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>List of clients </div>
                <div class="tools">
                    <a href="{{ path('app_client_new') }}" class="fa fa-user-plus"></a>
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="{{ path('app_client_list') }}" class="reload"> </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                        {% for client in clients %}
                            <tr>
                                <td> {{ client.name }} </td>
                                <td> - </td>
                                <td> {% if client.isInactive %}
                                        <a class="disabled btn purple"> No
                                            <i class="fa fa-ok"></i>
                                        </a>
                                    {% else %}
                                        <a class="disabled btn blue"> Yes
                                            <i class="fa fa-ok"></i>
                                        </a>
                                    {% endif %}
                                </td>
                                <td>
                                    <form name="client_type" method="put" action="">
                                        <button type="submit" class="btn yellow">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <form name="client_type" method="DELETE" action="">
                                        <button type="submit" class="btn red">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <thead>
                        <tr>
                            <th> Name </th>
                            <th> Address </th>
                            <th> Active </th>
                            <th> Edit </th>
                            <th> Delete </th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    {% endblock %}

{% endblock %}


